<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan"
    tools:context=".kayit" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="410dp"
        android:layout_height="391dp"
        android:layout_marginTop="41dp"
        android:background="#F6F5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kayit_txt_1"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/kayit_btn"
            android:layout_width="250dp"
            android:layout_height="42dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#99102829"
            android:fontFamily="@font/comfortaa"
            android:text="Kayıt Ol"
            android:textAlignment="center"
            android:textColor="#F6F5F5"
            android:textColorLink="#B3FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/girislogo"
            app:layout_constraintVertical_bias="0.6" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="201dp"
            android:layout_height="31dp"
            android:layout_marginTop="64dp"
            android:backgroundTint="#232121"
            android:ems="10"
            android:fontFamily="@font/comfortaa"
            android:inputType="text"
            android:text=" "
            android:textColor="#171717"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.319"
            app:layout_constraintStart_toEndOf="@+id/k_adi"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/k_adi"
            android:layout_width="110dp"
            android:layout_height="33dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/comfortaa"
            android:text="Kullanıcı Adı"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/k_adi"
            android:layout_width="56dp"
            android:layout_height="34dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/comfortaa"
            android:text="E-mail"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/login_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:fontFamily="@font/comfortaa"
            android:text="Parolanız"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/k_adi"
            app:layout_constraintVertical_bias="0.115" />

        <TextView
            android:id="@+id/kayit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa"
            android:text="Hesabın Var mı Giriş Yap"
            android:textColorLink="#232323"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kayit_btn"
            app:layout_constraintVertical_bias="0.389" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="200dp"
            android:layout_height="33dp"
            android:backgroundTint="#232121"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="#171717"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toEndOf="@+id/k_adi"
            app:layout_constraintTop_toBottomOf="@+id/editTextText"
            app:layout_constraintVertical_bias="0.515" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="201dp"
            android:layout_height="31dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="#232121"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="173dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="208dp"
        android:layout_height="167dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo2" />

    <TextView
        android:id="@+id/kayit_txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa"
        android:text="Yeni Hesap Oluştur"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="264dp" />

</androidx.constraintlayout.widget.ConstraintLayout>